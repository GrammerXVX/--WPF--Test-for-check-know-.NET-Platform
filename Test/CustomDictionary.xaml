    <Image x:Key="resourceImageRAM" Source="C:\Курсовые\ComputerDirectory\ComputerDirectory\Image\RAM.png"/>
    <Image x:Key="resourceImageMB" Source="C:\Курсовые\ComputerDirectory\ComputerDirectory\Image\MB.png"/>
    <Image x:Key="resourceImageHDD" Source="C:\Курсовые\ComputerDirectory\ComputerDirectory\Image\HDD.png"/>
    <Image x:Key="resourceImageSSD" Source="C:\Курсовые\ComputerDirectory\ComputerDirectory\Image\SSD.png"/>
    <Image x:Key="resourceImageBP" Source="C:\Курсовые\ComputerDirectory\ComputerDirectory\Image\BP.png"/>
    <Image x:Key="resourceImageFAN" Source="C:\Курсовые\ComputerDirectory\ComputerDirectory\Image\FAN.png"/>
</ResourceDictionary>